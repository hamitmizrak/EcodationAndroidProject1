<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelephoneValidation">

    <!--firebase Telephone login-->
    <!--drawableLeft:icon eklemek-->
    <EditText
        android:id="@+id/phoneNumberEditTextId"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="90dp"
        android:drawableLeft="@drawable/ic_baseline_settings_cell_24"
        android:hint="Telefon numaranız +90 xxxyyyzzmm"
        android:paddingTop="15dp"
        app:layout_anchor="@+id/phoneNumberEditTextId"
        app:layout_anchorGravity="bottom|center" />

    <EditText
        android:id="@+id/phoneCodeEditTextId"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_baseline_verified_user_24"
        android:hint="Doğrula kodunu yazınız"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/confirmationButtonId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_baseline_smart_button_24"
        android:text="İstek At"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</LinearLayout>